# Memora Backend Environment Variables

# Gemini API (Required for LLM features)
GEMINI_API_KEY=your_gemini_api_key_here

# Neon PostgreSQL Database (for chat history & user activities)
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=memora_memories

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads

# Embedding Model
EMBEDDING_MODEL=intfloat/e5-base-v2
EMBEDDING_DIMENSION=768

# Clerk Authentication (Optional - for backend user sync)
CLERK_SECRET_KEY=YOUR_SECRET_KEY
CLERK_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# Neon PostgreSQL Database (for chat history, activities, focus sessions)
# Get your FREE connection string from https://console.neon.tech
# Format: postgresql://user:password@ep-xxx.region.aws.neon.tech/database?sslmode=require
DATABASE_URL=
